<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp">


    <thamizh.andro.org.diglossia.customfont.PN_TextView_Regular
        android:id="@+id/lblQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginRight="5dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical|left"
        android:padding="5dp"
        android:text="@string/kurilnedil"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="@dimen/txt7"
        android:textColor="@color/colorPrimaryDark" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <thamizh.andro.org.diglossia.customfont.PN_TextView_Regular
            android:id="@+id/lblRightAnswer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical|left"
            android:padding="5dp"
            android:text="@string/kurilnedil"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="@dimen/txt7"
            android:textColor="@color/colorPrimaryDark" />
        <thamizh.andro.org.diglossia.customfont.PN_TextView_Regular
            android:id="@+id/lblWrongAnswer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical|left"
            android:padding="5dp"
            android:text="@string/kurilnedil"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="@dimen/txt7"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

</LinearLayout>